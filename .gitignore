# == Configuration & Sensitive Files ==
# NEVER commit your database credentials or security keys.
wp-config.php
.env
.env.production
.env.staging

# == Content Directory ==
# Ignore the entire wp-content directory by default.
# Then, create exceptions for the custom files you want to track.

/wp-content/*
!/wp-content/themes/
!/wp-content/plugins/
!/wp-content/mu-plugins/
!/wp-content/uploads/
!/wp-content/index.php

# == wp-content Exceptions ==
# Add the specific plugins or themes you are building and want to track.
# This ensures that only YOUR custom code is committed, not third-party plugins.

# Un-ignore your custom plugin directory
/wp-content/plugins/*
!/wp-content/plugins/unsubscribe-manager/

# Example for a custom theme (if you have one)
#/wp-content/themes/*
#!/wp-content/themes/your-custom-theme-name/

# == Temporary & System Files ==
# Ignore files generated by your OS, IDE, or various plugins.
.DS_Store
Thumbs.db
.idea/
.vscode/

# == Cache and Logs ==
# Ignore directories created by caching plugins or logging.
/wp-content/cache/
/wp-content/upgrade/
/wp-content/ai1wm-backups/
/wp-content/wpo-cache/
*.log
*.sql
*.zip
*.gz

# == Docker ==
# Ignore files created by Docker, while keeping your main docker-compose file.
# The docker-compose.yml file is important and should be committed.
# Docker volumes and build context
.dockerignore
/docker/data/
